#!/bin/bash
#
# Pre-commit hook for CatSith
# Runs formatting check, clippy, and tests before allowing commit
#

set -e

echo "ğŸ± CatSith pre-commit checks..."
echo ""

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check if we're in the right directory
if [ ! -f "Cargo.toml" ]; then
    echo -e "${RED}Error: Not in project root${NC}"
    exit 1
fi

# 1. Check formatting
echo "ğŸ“ Checking formatting..."
if ! cargo fmt --all -- --check; then
    echo ""
    echo -e "${RED}âŒ Formatting check failed!${NC}"
    echo -e "${YELLOW}Run 'cargo fmt --all' to fix formatting issues${NC}"
    exit 1
fi
echo -e "${GREEN}âœ“ Formatting OK${NC}"
echo ""

# 2. Run clippy
echo "ğŸ“ Running clippy..."
if ! cargo clippy --all-targets --all-features -- -D warnings; then
    echo ""
    echo -e "${RED}âŒ Clippy found issues!${NC}"
    echo -e "${YELLOW}Fix the warnings above before committing${NC}"
    exit 1
fi
echo -e "${GREEN}âœ“ Clippy OK${NC}"
echo ""

# 3. Run tests
echo "ğŸ§ª Running tests..."
if ! cargo test --all; then
    echo ""
    echo -e "${RED}âŒ Tests failed!${NC}"
    echo -e "${YELLOW}Fix failing tests before committing${NC}"
    exit 1
fi
echo -e "${GREEN}âœ“ Tests OK${NC}"
echo ""

echo -e "${GREEN}ğŸ‰ All pre-commit checks passed!${NC}"
